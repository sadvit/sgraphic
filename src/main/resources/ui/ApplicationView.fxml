            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem onAction="#onRandomClick" mnemonicParsing="false" text="Random"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <Pane fx:id="pane">
            <ImageCanvas fx:id="drawArea"/>
        </Pane>
    </center>
</BorderPane>
