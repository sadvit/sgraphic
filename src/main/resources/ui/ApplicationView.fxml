        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem onAction="#onOpenClick" mnemonicParsing="false" text="Open"/>
                <MenuItem onAction="#onSaveClick" mnemonicParsing="false" text="Save"/>
                <MenuItem onAction="#onExitClick" mnemonicParsing="false" text="Exit"/>
